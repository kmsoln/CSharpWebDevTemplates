@model MVC.Models.Account.ChangePasswordViewModel


<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>Change Password</h1>

        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="OldPassword"></label>
                <input asp-for="OldPassword" class="form-control mt-1" type="password"/>
                <span asp-validation-for="OldPassword" class="text-danger mt-1"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control mt-1" type="password"/>
                <span asp-validation-for="NewPassword" class="text-danger mt-1"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control mt-1" type="password"/>
                <span asp-validation-for="ConfirmPassword" class="text-danger mt-1"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-3 mb-3">Change Password</button>
        </form>

    </div>
</div>