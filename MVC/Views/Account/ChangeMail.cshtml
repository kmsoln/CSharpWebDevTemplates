@model MVC.Models.Account.ChangeMailViewModel

@{
    ViewData["Title"] = "Change Email";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>@ViewData["Title"]</h1>

        <form method="post">

            <div class="form-group mb-3">
                <label asp-for="CurrentEmail">Current Email</label>
                <input asp-for="CurrentEmail" class="form-control mt-1"/>
                <span asp-validation-for="CurrentEmail" class="text-danger mt-1"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NewEmail">New Email</label>
                <input asp-for="NewEmail" class="form-control mt-1"/>
                <span asp-validation-for="NewEmail" class="text-danger mt-1"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ConfirmNewEmail">Confirm New Email</label>
                <input asp-for="ConfirmNewEmail" class="form-control mt-1"/>
                <span asp-validation-for="ConfirmNewEmail" class="text-danger mt-1"></span>
            </div>

            <button type="submit" class="btn btn-primary">Change Email</button>

        </form>
    </div>
</div>